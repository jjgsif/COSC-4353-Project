<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :clientName, style: "display: block" %>
    <%= form.text_field :clientName %>
  </div>

  <div>
    <%= form.label :ordersPlaced, style: "display: block" %>
    <%= form.number_field :ordersPlaced %>
  </div>

  <div>
    <%= form.label :newCustomer, style: "display: block" %>
    <%= form.check_box :newCustomer %>
  </div>

  <div>
    <%= form.label :dateJoined, style: "display: block" %>
    <%= form.datetime_field :dateJoined %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
